<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.dao.BanshixinxiDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.entity.BanshixinxiEntity" id="banshixinxiMap">
        <result property="bumenmingcheng" column="bumenmingcheng"/>
        <result property="fuzeren" column="fuzeren"/>
        <result property="lianxihaoma" column="lianxihaoma"/>
        <result property="fengmian" column="fengmian"/>
        <result property="banlixinxi" column="banlixinxi"/>
        <result property="yonghuzhanghao" column="yonghuzhanghao"/>
        <result property="yonghuxingming" column="yonghuxingming"/>
        <result property="tijiaoshijian" column="tijiaoshijian"/>
        <result property="sfsh" column="sfsh"/>
        <result property="shhf" column="shhf"/>
    </resultMap>

	<select id="selectListVO"
		resultType="com.entity.vo.BanshixinxiVO" >
		SELECT * FROM banshixinxi  banshixinxi         
        <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	
	<select id="selectVO"
		resultType="com.entity.vo.BanshixinxiVO" >
		SELECT  banshixinxi.* FROM banshixinxi  banshixinxi
 		<where> 1=1 ${ew.sqlSegment}</where>
	</select>

    <select id="selectListView"
		resultType="com.entity.view.BanshixinxiView" >

		SELECT  banshixinxi.* FROM banshixinxi  banshixinxi 	        
        <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	
	<select id="selectView"
		resultType="com.entity.view.BanshixinxiView" >
		SELECT * FROM banshixinxi  banshixinxi <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	

    <select id="selectValue" resultType="map" >
        SELECT ${params.xColumn}, sum(${params.yColumn}) total FROM banshixinxi
        <where> 1=1 ${ew.sqlSegment}</where>
        group by ${params.xColumn}
    </select>

    <select id="selectTimeStatValue" resultType="map" >
        <if test = 'params.timeStatType == "日"'>
                SELECT DATE_FORMAT(${params.xColumn},'%Y-%m-%d') ${params.xColumn}, sum(${params.yColumn}) total FROM banshixinxi
                <where> 1=1 ${ew.sqlSegment}</where>
                group by DATE_FORMAT(${params.xColumn},'%Y-%m-%d')
        </if>
        <if test = 'params.timeStatType == "月"'>
                SELECT DATE_FORMAT(${params.xColumn},'%Y-%m') ${params.xColumn}, sum(${params.yColumn}) total FROM banshixinxi
                <where> 1=1 ${ew.sqlSegment}</where>
                group by DATE_FORMAT(${params.xColumn},'%Y-%m')
        </if>
        <if test = 'params.timeStatType == "年"'>
                SELECT DATE_FORMAT(${params.xColumn},'%Y') ${params.xColumn}, sum(${params.yColumn}) total FROM banshixinxi
                <where> 1=1 ${ew.sqlSegment}</where>
                group by DATE_FORMAT(${params.xColumn},'%Y')
        </if>
    </select>
   
    <select id="selectGroup" resultType="map" >
        SELECT ${params.column} , count(1) total FROM banshixinxi  
        <where> 1=1 ${ew.sqlSegment}</where>
        group by ${params.column}
    </select>
	
</mapper>
